<form class="purchase">
    
    <div class="input">
        <input type="text" name="name" placeholder="{phrases.buy_dialog_name}">
    </div>

    <div class="input">
        <input type="text" name="phone" placeholder="{phrases.buy_dialog_phone}">
    </div>

    <div class="input">
        <input type="text" name="email" placeholder="{phrases.buy_dialog_email}">
    </div>

    <div class="input">
        <input type="text" name="address" placeholder="{phrases.buy_dialog_address}">
    </div>

    <div class="input">
        <input type="text" name="pay" placeholder="{phrases.buy_dialog_pay}">
    </div>
    
    <div class="submit">
        
        <input type="submit" value="{phrases.buy_dialog_submit}">
        
    </div>
        
    <div class="login">
        
        <a href="javascript: void(login());">{phrases.buy_dialog_login}</a>
        
    </div>        
    
</form>