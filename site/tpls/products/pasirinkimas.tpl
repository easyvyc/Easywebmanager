<div class="pasirinkimas">
    
    <div class="col3 rel">
    
        <span class="ico key"></span>
        
        <h2 style="height:50px;">{phrases.login_dialog_submit}</h2>
        
        <div class="text">{phrases.login_pasirinkimas_text}</div>
        
        <div class="button">
            <input type="button" value="{phrases.login_dialog_submit}" onclick="javascript: void(login());">
        </div>
        
    </div>
    
    <div class="col3 rel">
        <span class="ico user"></span>
        
        <h2 style="height:50px;">{phrases.register_dialog_submit}</h2>
        
        <div class="text">{phrases.register_pasirinkimas_text}</div>
        
        <div class="button">
            <input type="button" value="{phrases.register_dialog_submit}" onclick="javascript: void(register());">
        </div>
    </div>
    
    <div class="col3 rel">
    
        <span class="ico cart"></span>
        
        <h2 style="margin:0px;">{phrases.buy_without_register_dialog_submit}</h2>
        
        <div class="text">{phrases.no_register_pasirinkimas_text}</div>
        
        <div class="button">
            <input type="button" value="{phrases.checkout_dialog_submit}" onclick="javascript: void(checkout());">
        </div>
    
    
    </div>
    
</div>
